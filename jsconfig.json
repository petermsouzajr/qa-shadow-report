{
  "compilerOptions": {
    "module": "esnext", // Change module type to ES modules
    "allowJs": true, // Allows JS files
    "checkJs": false, // Type-checking in JS files
    "target": "es2020", // Updated target to support newer features like import.meta
    "moduleResolution": "node", // Ensures proper resolution of modules
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.test.js"]
}
